<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/assignmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:text="Homework #1"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="64sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignmentCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:text="Calculus"
            android:textColor="@android:color/background_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignmentDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Due: Dec 25 2017"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/assignmentCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:text="Completed"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assignmentGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="Grade: 10%"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/assignmentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weight: 25%"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Milestones"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/assignmentAddMilestone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_row="6"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/colorPrimary" />

        <ListView
            android:id="@+id/assignmentMilestones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7" />

        <TextView
            android:id="@+id/assignmentNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Notes:"
            android:textSize="18sp" />

    </GridLayout>

</LinearLayout>