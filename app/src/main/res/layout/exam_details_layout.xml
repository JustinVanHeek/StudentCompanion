<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/examName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:text="Midterm"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="64sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/examCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:text="Calculus"
            android:textColor="@android:color/background_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/examDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Dec 25 2017"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/examRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="Room:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/examSeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seat: "
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/examGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="Grade: 10%"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/examWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weight: 25%"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/examNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Notes:"
            android:textSize="18sp" />

    </GridLayout>

</LinearLayout>