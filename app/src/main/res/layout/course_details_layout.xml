<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:text="Calculus"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="64sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:text="MATH 123"
            android:textColor="@android:color/background_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="0"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="3"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:paddingTop="10dp"
            android:text="MWF 9:00am - 10:00am NEU 23"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/courseProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Prof Sutcliffe"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/courseOfficeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Office: Neu 10 MTW 10:00am - 11:00am"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Assignments"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/courseAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Exams"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/courseExams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8" />

        <TextView
            android:id="@+id/courseNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Notes:"
            android:textSize="18sp" />

    </GridLayout>

</LinearLayout>